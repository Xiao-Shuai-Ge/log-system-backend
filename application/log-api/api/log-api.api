syntax = "v1"

type (
	WriteLogReq {
		Source   string                 `json:"source"`
		Level    string                 `json:"level"`
		Content  string                 `json:"content"`
		Metadata map[string]interface{} `json:"metadata,optional"`
	}
	WriteLogResp {
		Ok bool `json:"ok"`
	}
)

service log-api {
	@handler WriteLog
	post /log/write (WriteLogReq) returns (WriteLogResp)
}

